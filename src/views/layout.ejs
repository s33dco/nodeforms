<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Forms in Node.js</title>
  <link rel="stylesheet" href="/style.css" type="text/css" />
</head>
<body>
  <% if (messages.success) { %>
    <div class="flash flash-success"><%= messages.success %></div>
  <% } %>
  <% if (messages.failure) { %>
    <div class="flash flash-failure"><%= messages.failure %></div>
  <% } %>
<%- body %>
</body>
</html>
